<div class="container jobs">
<p id="notice"><%= notice %></p>
<h1>#<%= @job.id %> <%= @job.title %> </h1>
<div class="h1-after companies">&nbsp;</div>

<section class="job-info">
  <div class="row">
    <div class="col-sm-7 profile">
      <strong>Job Title:</strong> <%= @job.title %> <br>
      <strong>Salary Offered:</strong> <%= @job.offered_salary %> <br>
      <strong>Country:</strong> <%= @job.country %> <br>
      <strong>Skills Requested:</strong>
      <%= render "skills/skills_pills" %><br>
      <strong>Description:</strong> <%= @job.description %> <br><br>
      <div class="text-right">
      <strong>Job posted</strong> <%= time_ago_in_words @job.created_at %> ago
      </div>
    </div>
    <div class="offset-sm-1 col-sm-4 stats pt-5">
      This job listing has been viewed <strong>455</strong> times.
      <br><br>
      You have <strong>5</strong> interested candidates and <strong>88</strong> relevant matches. <br><br>
      <% if @company = @job.company %>
        <%= link_to 'Edit Job Listing', edit_job_path(@job) %>
      <% end %>
    </div>
  </div>
</section>
<% if @company %>
  
<% end %>
<%= link_to 'Back', jobs_path %>
</div>
