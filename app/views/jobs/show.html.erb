<div class="container jobs">
<p id="notice"><%= notice %></p>
<h1>#<%= @job.id %> <%= @job.title %> <a href="#"><i class="material-icons">edit</i></a></h1>
<div class="h1-after companies">&nbsp;</div>

<section class="job-info">
  <div class="row">
    <div class="col-sm-7 profile">
      <strong>Job Title:</strong> <%= @job.title %> <br>
      <strong>Created:</strong> <%= time_ago_in_words @job.created_at %> ago<br>
      <strong>Description:</strong> <%= @job.description %> <br>
      <strong>Salary Offered:</strong> <%= @job.offered_salary %> <br>
      <strong>Country:</strong> <%= @job.country %> <br>
      <strong>Skills Requested:</strong>
      <%= render "skills/skills_pills" %>
    </div>
    <div class="offset-sm-1 col-sm-4 stats pt-5">
      This job listing has been viewed <strong>455</strong> times.
      <br><br>
      You have <strong>5</strong> interested candidates and <strong>88</strong> relevant matches.

      <% if @match %>
        <div>
          <%= form_with scope: :match, model: @match, local: true do |form| %>
            <%= form.hidden_field :candidate_like, :value => true %>
            <%= form.submit 'I am interested in this job' %>
          <% end %>
          <%= form_with scope: :match, model: @match, local: true do |form2| %>
            <%= form2.hidden_field :candidate_like, :value => false %>
            <%= form2.submit 'I do not like this job' %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
</section>
<% if @company %>
  <% if @company = @job.company %>
    <%= link_to 'Edit', edit_job_path(@job) %> |
  <% end %>
<% end %>
<%= link_to 'Back', jobs_path %>
</div>
