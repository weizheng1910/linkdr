<% if @candidate %>
  <% @candidate.skills.each do |skill| %>
    <% if @job.skills.include? skill %>
      <%= content_tag(:span, skill.name, class: "badge badge-pill badge-primary") %>
    <% else %>
      <%= content_tag(:span, skill.name, class: "badge badge-pill badge-secondary") %>
    <% end %>
  <% end %>
<% else %>
  <% @job.skills.each do |skill| %>
    <%= content_tag(:span, skill.name, class: "badge badge-pill badge-secondary") %>
  <% end %>
<% end %>
